#!/usr/bin/env bash

#################################################
## Common variables/functions and whatnot that ##
## are used across all scripts in this repo    ##
#################################################

############
## Colors ##
############
RED='\033[0;31m'
GREEN='\033[0;32m'
BLUE='\033[0;34m'
RESTORE='\e[0m'

# Device Codename
DEVICE="sailfish"

# Number of parallel threads to use when compiling 
PAR_THREAD="-j$(($(nproc --all) * 2 - 2))"

###########################
## Discord configuration ##
###########################

# Discord script location
DC_SCRIPT="${HOME}/shagbot/dis.py"

dc_chk() {
if [[ ! -e ${DC_SCRIPT} ]]; then
    echo -e "${RED}Discord bot not found at ${DC_SCRIPT}!${RESTORE}"
else
    DC=true
fi
}

# Message Discord function
dc_msg() {
    echo "$1" | python3 "${DC_SCRIPT}"
}

################################
## Google Drive configuration ##
################################

# Check if "grive" is installed
grive_chk() {
if ! command -v grive > /dev/null; then
    echo -e "${RED}grive is not installed! Install and configure grive to have your projects automatically uploaded to Google Drive!${RESTORE}"
else
    GDRIVE=true
fi
}

# Google Drive folder location
GD_FOLDER="/media/shagbag913/Roms/gdrive"
