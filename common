#!/usr/bin/env bash

# Disable shellcheck unused variable warning
# shellcheck disable=SC2034

# Device Codename
DEVICE="sailfish"

# Number of parallel threads to use when compiling 
PAR_THREAD="-j$(($(nproc --all) * 2 - 2))"

###########################
## Discord configuration ##
###########################

# Discord script location
DC_SCRIPT="${HOME}/shagbot/dis.py"

# Discord message
dc_msg() {
    echo "$1" | python3 "${DC_SCRIPT}"
}

################################
## Google Drive configuration ##
################################

# Check if "grive" is installed
grive_chk() {
if ! command -v grive > /dev/null; then
    echo "${RED}grive is not installed! Install and configure grive to have your projects automatically uploaded to Google Drive!${RESTORE}"
    unset GDRIVE
else
    GDRIVE=true
fi
}

# Google Drive folder location
GD_FOLDER="/media/shagbag913/Roms/gdrive"

############
## Colors ##
############
RED='\033[0;31m'
GREEN='\033[0;32m'
BLUE='\033[0;34m'
RESTORE='\e[0m'

