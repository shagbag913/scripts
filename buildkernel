#!/bin/bash

### Really ugly Kernel Build Script 
make mrproper
make clean
make shag_defconfig
make -j$(nproc --all) && success=yes
if [[ ${success} = yes ]]; then
    cd /media/shagbag913/Roms/kernel/ak2
    rm -rf Image.lz4-dtb
    cp /media/shagbag913/Roms/kernel/shagkernel/arch/arm64/boot/Image.lz4-dtb .
    ./zip.sh
    cp ShagKernel*.zip /media/shagbag913/Roms/gdrive/Kernel
    cd /media/shagbag913/Roms/gdrive
    grive
fi
